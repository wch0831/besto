    <!-- 게시글 수정 -->
   	<update id="free_board_update">
   		update free_board set free_board_title = #{freeBoardTitle}, free_board_content = #{freeBoardContent}, free_board_regdate = sysdate
   		where users_seq = #{userSeq}
   	</update>

    
    
